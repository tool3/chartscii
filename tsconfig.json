{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "types": ["@types/mocha", "@types/node"]
  },
  "exclude": ["examples", "shellfies"]
}
